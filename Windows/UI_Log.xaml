<UserControl x:Class="Chronicle.UI_Log"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chronicle"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             VisualTextRenderingMode="ClearType" RenderOptions.ClearTypeHint="Enabled">
    <Grid>
        <TextBox x:Name="tLog" Margin="10,34,10,10" TextWrapping="Wrap" Text="Here comes the log" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
        <Button x:Name="bCopy" HorizontalAlignment="Left" Margin="10,9,0,0" VerticalAlignment="Top" Width="75" Click="bCopy_Click">
            <StackPanel Orientation="Horizontal">
                <Image Source="pack://application:,,,/Chronicle;component/icons/copy-16.png" Stretch="None" />
                <TextBlock Text="Copy" Margin="4,-1,2,0" />
            </StackPanel>
        </Button>

    </Grid>
</UserControl>
