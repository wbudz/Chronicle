<Window x:Name="wInputBox" x:Class="Enterprise.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Enterprise"
        mc:Ignorable="d"
        Title="InputBox" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" VerticalAlignment="Top">
            <Label x:Name="lLabel" VerticalAlignment="Center" Margin="5,10" />
            <TextBox x:Name="tInput" Width="100" VerticalAlignment="Center" Margin="5,10" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Background="White" Orientation="Horizontal" VerticalAlignment="Top">
            <Button x:Name="bOK" Content="OK" Width="75" VerticalAlignment="Center" Margin="5,10" IsDefault="True" Click="bOK_Click" />
            <Button x:Name="bCancel" Content="Cancel" Width="75" VerticalAlignment="Center" Margin="5,10" IsCancel="True" Click="bCancel_Click" />
        </StackPanel>
    </DockPanel>
</Window>
